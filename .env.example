# Example .env for Vida Coach Backend

# Database connection string (SQLite for local dev)
DATABASE_URL=sqlite:///./vida.db

# Secret key for JWT token signing
SECRET_KEY=your-secret-key-here

# OpenAI API key (required for AI features)
OPENAI_API_KEY=sk-xxx-your-openai-key

# Stripe API keys (optional, for billing features)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Application environment
ENVIRONMENT=development
PORT=8000

# Feature flags (comma-separated, e.g. journal,goals,checkins,pdf_export,agent_feedback)
ENABLED_FEATURES=journal,goals,checkins,pdf_export,agent_feedback

# Debug mode
DEBUG_MODE=True